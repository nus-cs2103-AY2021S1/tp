<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<GridPane styleClass="status-bar" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10" />
  </columnConstraints>
  <HBox minWidth="340" prefWidth="500"  HBox.hgrow="ALWAYS">
    <Region fx:id="emptyLeft" minWidth="12"/>
    <Label fx:id="currentSessionLeftStatus" />
    <Region HBox.hgrow="ALWAYS"/>
    <Label fx:id="currentSessionRightStatus"  textAlignment="RIGHT" alignment="CENTER_RIGHT"/>
    <Region fx:id="emptyRight" minWidth="12"/>
  </HBox>
</GridPane>
