<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>
<fx:root resizable="false" title="Settings" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/gear_icon.png" />
  </icons>
  <scene>
    <Scene>
         <VBox alignment="CENTER" spacing="5">
            <children>
               <Label fx:id="helpMessage" text="Weight Unit for Graphs:" />
                <RadioButton fx:id="kgRadio" styleClass="label"></RadioButton>
                <RadioButton fx:id="poundRadio" styleClass="label" ></RadioButton>
            </children>
            <opaqueInsets>
               <Insets bottom="10.0" left="45.0" right="45.0" top="5.0" />
            </opaqueInsets>
            <padding>
               <Insets bottom="10.0" left="45.0" right="45.0" top="5.0" />
            </padding>
         </VBox>
    </Scene>
  </scene>
</fx:root>
