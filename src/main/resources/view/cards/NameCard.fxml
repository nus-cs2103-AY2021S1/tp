<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.HBox?>
<Pane fx:id="nameCard" styleClass="centralise" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="10" bottom="10" />
    </padding>
    <HBox spacing="5" alignment="TOP_LEFT">
        <Label fx:id="id" styleClass="cell_medium_label">
            <minWidth>
                <!-- Ensures that the label text is never truncated -->
                <Region fx:constant="USE_PREF_SIZE" />
            </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_medium_label" />
    </HBox>
</Pane>
