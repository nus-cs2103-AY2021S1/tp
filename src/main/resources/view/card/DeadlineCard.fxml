<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" alignment="CENTER" onMouseEntered="#handleMouseIn" onMouseExited="#handleMouseOut" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox fx:id="card" alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="title" styleClass="cell_big_label" text="\$first" wrapText="true" />
      </HBox>
         <FlowPane fx:id="tags" />
         <HBox spacing="5.0">
            <children>
               <Label text="Status:" />
            <Label fx:id="status" styleClass="cell_small_label" text="\$status" />
            </children>
         </HBox>
         <VBox fx:id="datetimeHolder">
            <children>
               <Label text="Date &amp; Time:" />
            <Label fx:id="dateTime" styleClass="cell_small_label" text="\$dateTime" />
            </children>
         </VBox>
         <VBox fx:id="descriptionHolder">
            <children>
               <Label text="Description:" />
            <Label fx:id="description" styleClass="cell_small_label" text="\$description" />
            </children>
         </VBox>
         <HBox fx:id="durationHolder" spacing="5.0">
            <children>
               <Label text="Duration:" />
            <Label fx:id="duration" styleClass="cell_small_label" text="\$duration" />
            </children>
         </HBox>
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
   <CheckBox fx:id="statusSign" alignment="CENTER" disable="true" mnemonicParsing="false">
      <HBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </HBox.margin>
   </CheckBox>
</HBox>
