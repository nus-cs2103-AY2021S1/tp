      <HBox alignment="CENTER" fillHeight="true" styleClass="label-section-header">
          <children>
              <Text fill="WHITE" strokeType="OUTSIDE" text="Blocks" textAlignment="CENTER" wrappingWidth="180.0">
                  <HBox.margin>
                      <Insets bottom="5.0" />
                  </HBox.margin>
              </Text>
          </children>
          <opaqueInsets>
              <Insets bottom="10.0" />
          </opaqueInsets>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
  </top>

  <center>
    <VBox>
      <BorderPane.margin>
        <Insets left="5" />
      </BorderPane.margin>

      <ListView fx:id="blockListView" VBox.vgrow="ALWAYS" />

    </VBox>
  </center>
</BorderPane>
