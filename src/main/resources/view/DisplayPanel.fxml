<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER">
    <StackPane fx:id="displayAreaPlaceholder" VBox.vgrow="ALWAYS"/>
    <HBox styleClass="tab-bar" maxWidth="-Infinity">
        <Button fx:id="recipeButton" styleClass="tab-button" mnemonicParsing="false" text="Recipes"
                onAction="#handleRecipePanel">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/recipes.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="ingredientButton" styleClass="tab-button" mnemonicParsing="false" text="Ingredients"
                onAction="#handleIngredientPanel">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/ingredients.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="recommendationButton" styleClass="tab-button" mnemonicParsing="false" text="Recommendations"
                onAction="#handleRecommendations">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/recommendations.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="favouriteButton" styleClass="tab-button" mnemonicParsing="false" text="Favourites"
                onAction="#handleFavourites">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/favourites.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
</VBox>
