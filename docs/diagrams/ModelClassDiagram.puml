@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Interface ReadOnlyMcGymmy <<Interface>>
Interface Model <<Interface>>
Interface ObservableList <<Interface>>
Class McGymmy
Class ReadOnlyMcGymmy
Class Model
Class ModelManager
Class UserPrefs
Class ReadOnlyUserPrefs

Package Food {
Class Food
Class Carbohydrate
Class Fat
Class Name
Class Date
Class Protein
Class Fridge
}

Package Tag {
Class Tag
}
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

McGymmy .up.|> ReadOnlyMcGymmy

ModelManager .up.|> Model
Model .right.> ObservableList
ModelManager o--> "1" McGymmy
ModelManager o-left-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

McGymmy *--> "1" Fridge
Fridge o--> "*" Food
Food *--> Name
Food *--> Protein
Food *--> Fat
Food *--> Carbohydrate
Food *--> Date
Food *--> "*" Tag

Name -[hidden]right-> Protein
Protein -[hidden]right-> Carbohydrate
Carbohydrate -[hidden]right-> Fat
Fat -[hidden]right-> Date

ModelManager --> Food : filteredFoodItems
@enduml
